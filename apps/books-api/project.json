{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "books-api",
    "root": "apps/books-api",
    "sourceRoot": "apps/books-api",
    "projectType": "application",

    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "dependsOn": ["swagger"],
            "options": {
                "command": "air",
                "cwd": "apps/books-api"
            },
            "cache": false
        },

        "swagger": {
            "executor": "nx:run-commands",
            "options": {
                "command": "go run github.com/swaggo/swag/cmd/swag@latest init -d cmd/server,internal/handler,internal/model,internal/validation -o internal/docs",
                "cwd": "apps/books-api"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "go test -coverprofile=coverage/coverage.out ./...",
                "cwd": "apps/books-api"
            },
            "cache": false
        },
        "coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "go tool cover -html=coverage/coverage.out -o coverage/coverage.html",
                "cwd": "apps/books-api"
            },
            "dependsOn": ["test"],
            "cache": false
        }
    }
}
