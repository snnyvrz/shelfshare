{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "books-api",
    "root": "apps/books-api",
    "sourceRoot": "apps/books-api",
    "projectType": "application",

    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "dependsOn": ["swagger"],
            "options": {
                "command": "air",
                "cwd": "apps/books-api"
            },
            "cache": false
        },

        "swagger": {
            "executor": "nx:run-commands",
            "options": {
                "command": "go run github.com/swaggo/swag/cmd/swag@latest init -g cmd/server/main.go -o internal/docs",
                "cwd": "apps/books-api"
            }
        }
    }
}
